{
  "languages": {
    "Shell Script": {
      "formatter": {
        "external": {
          "command": "shfmt",
          // Change `--indent 2` to match your preferred tab_size
          "arguments": ["--filename", "{buffer_path}", "--indent", "2"]
        }
      }
    }
  },
  "lsp": {
    "pylsp": {
      "settings": {
        "plugins": {
          "mccabe": {
            "enabled": true,
            "threshold": 25
          }
        }
      }
    }
  },
  "tab_size": 2,
  "format_on_save": "on",
  "autosave": "on_focus_change"
}
